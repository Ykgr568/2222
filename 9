    <script>
        // 轮播图功能
        let currentSlide = 0;
        const slides = document.querySelector('.slides');
        const dots = document.querySelectorAll('.slider-dot');
        const totalSlides = document.querySelectorAll('.slide').length;
        
        function goToSlide(index) {
            if (index < 0) index = totalSlides - 1;
            if (index >= totalSlides) index = 0;
            
            slides.style.transform = `translateX(-${index * 100}%)`;
            
            // 更新指示点状态
            dots.forEach((dot, i) => {
                dot.classList.toggle('active', i === index);
            });
            
            currentSlide = index;
        }
        
        // 自动轮播
        setInterval(() => {
            goToSlide(currentSlide + 1);
        }, 5000);
        
        // 点击指示点切换
        dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                goToSlide(index);
            });
        });
        
        // 添加购物车动画效果
        const addToCartButtons = document.querySelectorAll('.add-to-cart');
        
        addToCartButtons.forEach(button => {
            button.addEventListener('click', function() {
                const productCard = this.closest('.product-card');
                productCard.style.transform = 'scale(0.95)';
                
                setTimeout(() => {
                    productCard.style.transform = '';
                    
                    // 创建动画元素
                    const cartIcon = document.querySelector('.fa-shopping-cart');
                    const rect = cartIcon.getBoundingClientRect();
                    
                    const animationElement = document.createElement('div');
                    animationElement.innerHTML = '<i class="fas fa-plus"></i>';
                    animationElement.style.position = 'fixed';
                    animationElement.style.left = `${rect.left}px`;
                    animationElement.style.top = `${rect.top}px`;
                    animationElement.style.color = '#6a11cb';
                    animationElement.style.fontSize = '20px';
                    animationElement.style.zIndex = '1000';
                    animationElement.style.transition = 'all 0.8s cubic-bezier(0.68, -0.55, 0.27, 1.55)';
                    document.body.appendChild(animationElement);
                    
                    // 触发动画
                    setTimeout(() => {
                        animationElement.style.left = `${this.getBoundingClientRect().left + this.offsetWidth/2}px`;
                        animationElement.style.top = `${this.getBoundingClientRect().top}px`;
                        animationElement.style.transform = 'scale(2)';
                        animationElement.style.opacity = '0';
                    }, 10);
                    
                    // 移除元素
                    setTimeout(() => {
                        document.body.removeChild(animationElement);
                        
                        // 显示添加成功提示
                        const originalText = this.textContent;
                        this.textContent = '✓ 已添加';
                        this.style.background = '#2ed573';
                        
                        setTimeout(() => {
                            this.textContent = originalText;
                            this.style.background = '';
                        }, 1500);
                    }, 800);
                }, 200);
            });
        });
        
        // 底部导航激活状态
        const navItems = document.querySelectorAll('.nav-item');
        
        navItems.forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                navItems.forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
